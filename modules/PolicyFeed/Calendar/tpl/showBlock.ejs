<%

var day;
var days;


function makeDate(year, month, day) {
    return new Date(year, parseInt(month , 10) - 1, day);
}


function showCalendar(selected, active_days)
{
    var [year, month] = selected.split("-");

    var ad = {};
    for each (var i in active_days)
        ad[parseInt(i, 10)] = true;

    var html = '<div id="calendar"><h3>Kalendorius</h3><table cellspacing="1" border="0"><thead>';
    html += '<tr><th colspan="2"><a onclick="PolicyFeedCalendar.prevMonth(\'' + selected + '\')">&laquo;</a></th>';
    html += '<th colspan="3" class="title">' + year + '-' + month + '</th>';
    html += '<th colspan="2"><a onclick="PolicyFeedCalendar.nextMonth(\'' + selected + '\')">&raquo;</a></th></tr>';
    html += '<tr class="wd"><th>Pr</th><th>An</th><th>Tr</th><th>Kt</th><th>Pn</th><th>Å t</th><th>Sk</th></tr>';
    html += "</thead><tbody>";

    selected = selected.replace(/-/g, "/");
    var d = makeDate(year, month, 1);

    var first = d.getDay();
    if (first == 0)
        first = 6;
    else
        first--;

    // first week empty cells:
    html +="<tr>";
    for (var i=0; i<first; i++)
        html += "<td>&nbsp;</td>";
    
    i = 1;
    d = makeDate(year, month, i);
    var today = new Date().format("yyyy/MM/dd");

    while (d.getDate() == i)
    {
        if (d.getDay() == 1 && i > 1)
            html += '<tr>';

        var d_path = d.format("yyyy/MM/dd");
        var classes = [];

        // add classes to cell:
        var classes = [];
        if (d_path == today)
            classes.push("today");
        if (d_path == selected)
            classes.push("selected");
        html += '<td class="' + classes.join(" ") + '">';

        if (i in ad)
            html += '<a href="' + config.WEB_URL + '/docs/' + d_path + '/">' + i + '</a>';
        else
            html += i;
        
        html += '</td>';
        
        if (d.getDay() == 0)
            html += '</tr>';

        i++;
        d = makeDate(year, month, i);
    }

    // Add empty cells to end of table:
    var empty = d.getDay();
    if (empty != 1)
    {
        if (empty == 0)
            empty = 1;
        else
            empty = 8 - empty;

        for (i=0; i < empty; i++)
            html += '<td>&nbsp;</td>';

        html += '</tr>';
    }


    html += '</tbody></table></div>';

    return html;
}

print(showCalendar(day, days));

